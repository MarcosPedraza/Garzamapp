<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="8dp">


        <ImageView
            android:id="@+id/icon_app"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/drawer_icon"/>

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/icon_app"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_info_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_acerca_de"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_below="@+id/tv_titulo"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_info_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_acerca_de_2"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_below="@+id/tv_info_1"
            />


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/tv_info_2"
            />


        <android.support.v7.widget.CardView
            android:layout_below="@id/tv_version"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/card_correo">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">


                <TextView
                    android:id="@+id/tv_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Contacto: "/>


                <ImageView
                    android:id="@+id/icon_gmail"
                    android:layout_below="@+id/tv_cont"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_gmail"/>


                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/tv_cont"
                    android:layout_toRightOf="@+id/icon_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horowolf77@hotmail.com"
                    android:textSize="16dp"
                    />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:text="OK"
            android:textSize="18sp"
            android:background="@drawable/bg_btn_acerca_de"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

</RelativeLayout>